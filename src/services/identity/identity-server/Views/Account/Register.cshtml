        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="custom-signup-header">
                            <h2>Sign up a new account</h2>
                        </div>

                        <form asp-route="Register">
                            <fieldset>
                                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />

                                <div class="form-group">
                                    <input class="form-control input-bottom" placeholder="First Name" asp-for="FirstName" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control input-bottom" placeholder="Last Name" asp-for="LastName">
                                </div>
                                <div class="form-group">
                                    <input class="form-control input-bottom" placeholder="Email" asp-for="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control input-bottom" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control input-bottom" placeholder="Confirm password" asp-for="ConfirmPassword" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <small>Please read our <a class="custom-color" href="">terms and conditions</a> and <a class="custom-color" href="">privacy policy</a>.</small>
                                </div>
                                <button class="btn btn-primary btn-block custom-signup-button" name="button" value="register">Register</button>

                                <div class="custom-forgot-wrapper">
                                    <a class="custom-color" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
