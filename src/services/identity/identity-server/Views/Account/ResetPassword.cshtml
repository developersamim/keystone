@model identity_server.Controllers.Account.ResetPasswordModel

<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="card custom-card">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger custom-center" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="custom-center">
                <h2>Reset Password</h2>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="ResetPassword">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Email" class="form-control" />
                <input type="hidden" asp-for="Token" class="form-control" />
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-block custom-button" />
                </div>
            </form>
        </div>
        
    </div>
</div>